<h1 class="text-2xl font-bold text-center text-blue-600 mb-6">Login</h1>

<%= form_with scope: :session, url:login_path, class: "w-full max-w-lg mx-auto" do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

  </div>
  <div>
    <%= form.submit "Login", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
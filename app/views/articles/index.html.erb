<h1 class="text-blue-500 text-2xl font-bold mb-4">All Articles</h1>

<div class="flickr_pagination mb-6">
  <%= will_paginate @articles, :container => false %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @articles.each do |article| %>
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-bold mb-2"><%= link_to article.title, article_path(article) %></h2>
      <p class="text-gray-700 mb-4 hover:text-blue-700">By <%= link_to article.user.username, user_path(article.user) %></p>
      <p class="text-gray-500 text-sm">Created <%= time_ago_in_words(article.created_at) %> ago</p>
      <p class="text-gray-500 text-sm">Updated <%= time_ago_in_words(article.updated_at) %> ago</p>
    </div>
  <% end %>

</div>
<br>
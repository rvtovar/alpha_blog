<h1 class="text-blue-500 text-2xl font-bold mb-4">All Articles</h1>
<table class="min-w-full bg-white border border-gray-300">
  <thead>
  <tr class="w-full bg-gray-100">
    <th class="py-2 px-4 border-b text-left">Title</th>
    <th class="py-2 px-4 border-b text-left">Body</th>

    <th class="py-2 px-4 border-b text-left">Links</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr class="odd:bg-white even:bg-gray-50">
      <td class="py-2 px-4 border-b">
        <%= article.title %>
      </td>
      <td class="py-2 px-4 border-b"><%= article.content %></td>

      <td class="py-2 px-4 border-b">
        <%= link_to 'See Article', article_path(article), class: "text-blue-500 hover:underline" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<p class="mt-4"><%= link_to "Create New Article", new_article_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %></p>

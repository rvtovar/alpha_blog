<h1 class="text-4xl font-bold text-center text-blue-600 mb-6">Showing Article Details</h1>
<div class="bg-white p-6 rounded-lg shadow-md mb-6">
  <h2 class="text-2xl font-bold mb-4"><%= @article.title %></h2>
  <h3 class="text-xl text-gray-700 mb-4">
    <%= @article.user.username %>
  </h3>
  <div>
    <%= link_to gravatar_for(@article.user) ,user_path(@article.user) %>
  </div>
  <hr class="my-4">
  <div class="mb-4">
    <p class="text-gray-700"><%= @article.content %></p>
    <p class="text-gray-500 text-sm">Created <%= time_ago_in_words(@article.created_at) %> ago</p>
    <p class="text-gray-500 text-sm">Updated <%= time_ago_in_words(@article.updated_at) %> ago</p>
  </div>
</div>
<div class="mt-4 flex space-x-2">
  <%= link_to "All Articles", articles_path, class: "bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-700" %>
  <%if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to "Edit", edit_article_path(@article), class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
    <%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-700" %>
  <%end %>
</div>